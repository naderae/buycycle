



<div class="container">
  <h1>Login</h1><br>
  <div class="card card-container">
    <div class="form-group has-warning">
      <%= form_tag '/login' do %>


      <div class="form-group">
         <%= label_tag :email%>
         <%= text_field_tag :email  %>
      </div>

      <div class="form-group">
         <%= label_tag :password%>
         <%= text_field_tag :password %>
      </div>


      <div class="actions">
        <%= submit_tag "Login!", class: "btn btn-primary" %>
      </div>

      <% end %>


    </div>
  </div>
</div>

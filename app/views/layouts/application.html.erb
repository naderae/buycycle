<!DOCTYPE html>
<html>
  <head>
    <title>Buycycle</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container">
      <% if current_user%>
      <header class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" name="button" class="navbar-toggle collapsed" d>

            </button>


          </div>

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li><%= link_to('Homepage', home_path) %></li>
              <li><%= link_to('My Profile', user_path(current_user.id))%></li>
              <li><%= link_to 'Inbox', conversations_path %></li>
              <li><%= link_to 'Logout', logout_path %> </li>
            </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><h5>signed in as <%= current_user.username %> </h5></li>
            <li><%= image_tag(current_user.avatar.url(:thumb)) %></li>
          </ul>

        </div>
      </div>
    </header>




    <% else %>
    <header class="navbar  navbar-default">
      <div class="navbar-class">
        <div class="container">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Login', login_path %></li>
            <li><%= link_to 'Signup', new_user_path %></li>
          </ul>
        </div>
      </div>
  </header>
  <% end %>


  <%= yield %>
</div>
<script>
  $('.star-rating').raty({
    path: '/assets',
    readOnly: true,
    score: function () {
      return $(this).attr('data-score');
    }
  });
</script>


  </body>
</html>

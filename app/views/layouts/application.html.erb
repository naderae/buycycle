<!DOCTYPE html>
<html>
  <head>
    <title>Buycycle</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if current_user%>
      signed in as <%= current_user.username %> | <%= link_to('My Profile', user_path(current_user.id))%> | <%= link_to 'Logout', logout_path %> | <%= link_to 'Inbox', conversations_path %> | <%= link_to('Homepage', home_path) %>
    <% else %>
      <%= link_to 'Login', login_path %> | <%= link_to 'Signup', new_user_path %>
    <% end %>



    <%= yield %>
  </body>
</html>

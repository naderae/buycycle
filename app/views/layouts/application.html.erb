<!DOCTYPE html>
<html>
  <head>
    <title>JobFair</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "http://code.jquery.com/jquery-2.1.1.min.js" %>

  </head>

  <body>

    <div class="container">
      <% if current_user%>
      <header class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" name="button" class="navbar-toggle collapsed" d>

            </button>


          </div>

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li><%= link_to('Homepage', home_path) %></li>
              <li><%= link_to('My Profile', user_path(current_user.id))%></li>
              <li><%= link_to 'Inbox', conversations_path %></li>
              <li><%= link_to 'Logout', logout_path %> </li>
            </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><h5>signed in as <%= current_user.username %> </h5></li>
            <% if current_user.avatar.exists? %>
              <li><%= image_tag(current_user.avatar.url(:thumb)) %></li>
            <% end %>
         </ul>
        </div>
      </div>
    </header>




    <% else %>
    <header class="navbar  navbar-default">
      <div class="navbar-class">
        <div class="container">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Login', login_path %></li>
            <li><%= link_to 'Signup', new_user_path %></li>
          </ul>
        </div>
      </div>
  </header>
  <% end %>

  <script>

    $('.star-rating').raty({
      path: '/assets',
      readOnly: true,
      score: function () {
        return $(this).attr('data-score');
      }
    });
  </script>


  <%= yield %>



  <div class="row">
  <hr>
    <div class="col-lg-12">
      <div class="col-md-8">
        <a href="#">Terms of Service</a> | <a href="#">Privacy</a>
      </div>
      <div class="col-md-4">
        <p class="muted pull-right">Â© 2017 JobFair. All rights reserved</p>
      </div>
    </div>
  </div>
</div>


  </body>
</html>
